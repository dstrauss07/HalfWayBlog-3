@using BlogLibrary;
@using WebApplication.ViewModels;
@model PostDetailViewModel;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <dl class="row bg-light">
        <dt class="col-sm-4">
            Title
        </dt>
        <dt class="col-sm-4">
            Author
        </dt>
        <dt class="col-sm-4">
            Main Image
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.BlogPost.BlogPostTitle)
        </dd>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Author.AuthorName)
        </dd>
        <dd class="col-sm-4 bg-white">
            @{var blogPostImgUrl = "https://localhost:44381/" + Model.BlogPost.ImageUrl;}
            <img style="height:100px;width:auto" src="@blogPostImgUrl" alt="Select an Image" />
        </dd>
        <dt class="col-sm-12">
            Blog Post
        </dt>
        <dd class="col-sm-12 bg-white">
            @Html.Raw(Model.BlogPost.BlogText)
        </dd>
        <dt class="col-sm-2">
            Blog Tags
        </dt>
        <dd class="col-sm-10">
            @foreach (BlogTag b in Model.BlogTags)
            {
                @b.BlogTagName
                @:&#124;

            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BlogPost.BlogPostId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BlogPost.BlogPostId)
        </dd>
    </dl>
    </div>
    <div>
        @Html.ActionLink("Edit", "Edit", new { id = Model.BlogPost.BlogPostId }) |
        <a asp-action="Index">Back to List</a>
    </div>

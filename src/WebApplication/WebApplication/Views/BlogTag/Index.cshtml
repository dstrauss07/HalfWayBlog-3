@model IEnumerable<BlogLibrary.BlogTag>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BlogTagId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogTagName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BlogTagId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogTagName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.BlogTagId }) |
                @Html.ActionLink("Details", "Details", new { id = item.BlogTagId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BlogTagId })
            </td>
        </tr>
}
    </tbody>
</table>
